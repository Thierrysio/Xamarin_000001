<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_000001.Vues.TourneeVue">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Visite1.LaTournee.LaDate}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="page 2" 
                    BackgroundColor="#C72D2D" 
                    CornerRadius="15" 
                    Command="{Binding CommandBoutonPage2}"/>
            <Label Text="{Binding Cpt}" HorizontalOptions="Center" FontSize="40" Padding="20" Margin="20,0" />
                <Button Text="Compteur" 
                    BackgroundColor="#C72D2D" 
                    CornerRadius="15" 
                    Command="{Binding CommandBoutonCompteur}" Margin="20,0"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>